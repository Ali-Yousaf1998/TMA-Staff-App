<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppModules.Complaint_CompletedWork_Map_Details.MapActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />


    <Button
        android:onClick="showDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/directionButton"
        android:text="Show Direction"
        android:layout_marginBottom="@dimen/edit_text_margin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/sign_in_txt_color"
        android:textColor="@color/white"
        />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/nocCardInDesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_elevation"
        app:cardElevation="@dimen/recycler_view_margin"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_elevation"
            >

           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:id="@+id/userImageInNocDesign"
               android:src="@drawable/avatar"
               android:layout_marginLeft="@dimen/card_elevation"
               android:layout_marginTop="@dimen/card_elevation"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userNameInNocDesign"
                android:text="User Name"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/userImageInNocDesign"
                android:layout_marginTop="@dimen/card_elevation"
                android:layout_marginLeft="@dimen/recycler_view_margin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateInNocDesign"
                android:text="date"
                android:textSize="10sp"
                android:layout_below="@+id/userNameInNocDesign"
                android:layout_toRightOf="@id/userImageInNocDesign"
                android:layout_marginLeft="@dimen/recycler_view_margin"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleOfNocInDesign"
                android:text="Title"
                android:layout_below="@id/userImageInNocDesign"
                android:paddingLeft="@dimen/recycler_view_margin"
                android:layout_marginLeft="@dimen/card_elevation"
                android:layout_marginTop="@dimen/card_elevation"

                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statusInNocDesign"
                android:text="Unregister"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/card_elevation"
                android:layout_marginTop="@dimen/card_elevation"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/view"
                android:background="#55000000"
                android:layout_marginTop="@dimen/recycler_view_margin"
                android:layout_below="@id/titleOfNocInDesign"
                />

            <TextView
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seeNoc"
                android:text="Click to see map"
                android:layout_below="@id/view"
                android:layout_marginRight="@dimen/card_elevation"
                android:layout_marginLeft="@dimen/card_elevation"
                android:layout_marginTop="@dimen/card_elevation"
                android:textColorLink="@color/sign_in_txt_color"
                android:textColor="@color/sign_in_txt_color"
                />

            <TextView
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clickToRegisterNoc"
                android:text="Register Now"
                android:layout_below="@id/view"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/card_elevation"
                android:layout_marginLeft="@dimen/card_elevation"
                android:layout_marginTop="@dimen/card_elevation"
                android:textColorLink="@color/sign_in_txt_color"
                android:textColor="@color/sign_in_txt_color"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
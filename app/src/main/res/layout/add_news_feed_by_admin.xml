<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- post news feed text view -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/sign_in_txt_color"
        android:id="@+id/postNewsFeed"
        android:text="Post News Feed"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/recycler_view_margin"
        android:inputType="text"
        />

    <!-- Edit text for title-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/news_title_in_admin"
        android:background="@drawable/edit_text_bg"
        android:padding="@dimen/card_view"
        android:layout_marginTop="@dimen/margin_login_card_view"
        android:layout_marginLeft="@dimen/card_view"
        android:layout_marginRight="@dimen/card_view"
        android:hint="@string/title"
        android:textSize="12sp"
        android:inputType="text"
        />

    <!-- Edit text for description-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/news_description_in_admin"
        android:background="@drawable/edit_text_bg"
        android:padding="@dimen/card_view"
        android:layout_marginTop="@dimen/edit_text_margin"
        android:layout_marginLeft="@dimen/card_view"
        android:layout_marginRight="@dimen/card_view"
        android:hint="@string/description"
        android:textSize="12sp"
        android:inputType="text"
        />

    <!-- Btn for post news feed-->
    <Button
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/post_news_feed_submit"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_login_card_view"
        android:layout_marginRight="@dimen/margin_login_card_view"
        android:layout_marginTop="@dimen/edit_text_margin"
        android:layout_marginBottom="@dimen/edit_text_margin"
        android:text="Post"
        android:backgroundTint="@color/sign_in_txt_color"
        android:elevation="@dimen/card_view"
        app:cornerRadius="@dimen/card_view"
        />


</LinearLayout>
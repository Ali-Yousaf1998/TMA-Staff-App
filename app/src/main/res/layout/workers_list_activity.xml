<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppModules.WorkersListAndDetails.Activities.SanitationWorkersListActivity">


    <include layout="@layout/app_tool_bar"
    android:id="@+id/sanitation_worker_list_tool_bar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sanitationWorkerList"
        android:layout_below="@+id/sanitation_worker_list_tool_bar"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab_add_worker"
            android:onClick="fabAddWorkerClick"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin_login_card_view"
            android:layout_marginRight="@dimen/fab_margin_right"
            android:backgroundTint="@color/sign_in_txt_color"
            android:src="@drawable/ic_add_black_24dp"
            app:borderWidth="0dp"
            />

    <include
        layout="@layout/no_item_found_layout"
        android:id="@+id/noItemFoundLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />


</RelativeLayout>
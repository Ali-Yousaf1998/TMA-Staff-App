<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background_for_detail_bottom_sheet"
    android:layout_marginTop="@dimen/recycler_view_margin"
    android:paddingBottom="@dimen/edit_text_margin">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:id="@+id/complaintRatingImage"
        android:src="@drawable/tma_logo"
        android:layout_marginLeft="@dimen/edit_text_margin"
        android:layout_marginRight="@dimen/edit_text_margin"
        android:layout_marginTop="@dimen/card_elevation"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingValue"
        android:text="(3.5)"
        android:layout_marginTop="@dimen/edit_text_margin"
        android:layout_gravity="center_horizontal"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedbackRatingbar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:progressBackgroundTint="@color/yellow"
        android:progressTint="@color/yellow"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/recycler_view_margin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feebackComment"
        android:text="comment"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
       android:layout_marginTop="@dimen/card_elevation"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/closeFeedbackRatingBtn"
        android:text="Ok"
        android:backgroundTint="@color/sign_in_txt_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/edit_text_margin"
        />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refreshLayoutSanitation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AppModules.Complaints.Complaints">


    <include
        android:id="@+id/complaintsToolbar"
        layout="@layout/app_tool_bar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sanitationComplaintRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complaintsToolbar"
        android:layout_marginTop="@dimen/recycler_view_margin" />

    <TextView
        android:id="@+id/sanitationNoItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No Complaints" />


</RelativeLayout>